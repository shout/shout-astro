---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, author, publishDate, modifiedDate, image, category, readingTime } = post.data;
---

<BaseLayout
  title={title}
  description={description}
  author={author}
  publishDate={publishDate}
  modifiedDate={modifiedDate}
  ogImage={image?.src}
>
  <article class="blog-post">
    <div class="container">
      <!-- Article Header -->
      <header class="article-header">
        <div class="breadcrumb">
          <a href="/">Home</a>
          <span>›</span>
          <a href="/blog/">Blog</a>
          <span>›</span>
          <span>{title}</span>
        </div>

        {category && (
          <div class="category">
            <span class="category-tag">{category}</span>
          </div>
        )}

        <h1 class="article-title">{title}</h1>

        <div class="article-meta">
          {author && <span class="author">By {author}</span>}
          {publishDate && (
            <time class="publish-date" datetime={publishDate.toISOString()}>
              {publishDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          )}
          {readingTime && <span class="reading-time">{readingTime}</span>}
        </div>

        {image && (
          <div class="featured-image">
            <img
              src={image.src}
              alt={image.alt}
              width={image.width}
              height={image.height}
              loading="eager"
            >
          </div>
        )}
      </header>

      <!-- Article Content -->
      <div class="article-content">
        <slot />
      </div>

      <!-- Article Footer -->
      <footer class="article-footer">
        {modifiedDate && publishDate && modifiedDate > publishDate && (
          <p class="last-updated">
            Last updated: {modifiedDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </p>
        )}

        <div class="article-actions">
          <a href="/blog/" class="back-to-blog">← Back to Blog</a>
          <div class="share-buttons">
            <span>Share:</span>
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-button twitter"
            >
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-button linkedin"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .blog-post {
    padding: 2rem 0 4rem;
  }

  /* Article Header */
  .article-header {
    margin-bottom: 3rem;
  }

  .breadcrumb {
    font-size: 0.9rem;
    color: var(--text-light);
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: var(--primary-color);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb span {
    margin: 0 0.5rem;
  }

  .category {
    margin-bottom: 1rem;
  }

  .category-tag {
    background: var(--primary-color);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .article-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .article-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--text-light);
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .author {
    font-weight: 600;
  }

  .publish-date {
    color: var(--text-light);
  }

  .reading-time {
    color: var(--text-light);
  }

  .featured-image {
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Article Content */
  .article-content {
    line-height: 1.7;
    font-size: 1.1rem;
  }

  .article-content :global(h2) {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-color);
    margin: 2.5rem 0 1rem;
    padding-top: 1rem;
    border-top: 2px solid var(--border-color);
  }

  .article-content :global(h3) {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-color);
    margin: 2rem 0 1rem;
  }

  .article-content :global(h4) {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-color);
    margin: 1.5rem 0 0.75rem;
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--primary-color);
    background: var(--background-light);
    margin: 2rem 0;
    padding: 1.5rem 2rem;
    font-style: italic;
    color: var(--text-light);
  }

  .article-content :global(code) {
    background: var(--background-light);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    color: var(--primary-color);
  }

  .article-content :global(pre) {
    background: var(--text-color);
    color: white;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .article-content :global(pre code) {
    background: none;
    padding: 0;
    color: white;
  }

  .article-content :global(a) {
    color: var(--primary-color);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .article-content :global(a:hover) {
    border-bottom-color: var(--primary-color);
  }

  .article-content :global(strong) {
    font-weight: 700;
    color: var(--text-color);
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    overflow-x: auto;
  }

  .article-content :global(th),
  .article-content :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .article-content :global(th) {
    font-weight: 600;
    background: var(--background-light);
  }

  /* Article Footer */
  .article-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border-color);
  }

  .last-updated {
    font-size: 0.9rem;
    color: var(--text-light);
    margin-bottom: 2rem;
    font-style: italic;
  }

  .article-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .back-to-blog {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .back-to-blog:hover {
    color: var(--secondary-color);
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.9rem;
  }

  .share-button {
    color: var(--text-light);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    transition: all 0.2s;
  }

  .share-button:hover {
    background: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .article-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .article-content {
      font-size: 1rem;
    }

    .article-actions {
      flex-direction: column;
      align-items: flex-start;
    }

    .share-buttons {
      align-self: stretch;
      justify-content: center;
    }
  }
</style>