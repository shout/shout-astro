---
import AstroshipLayout from "../layouts/AstroshipLayout.astro";
import Container from "../components/container.astro";
import Button from "../components/ui/button.astro";
import { Icon } from "astro-icon/components";
---

<AstroshipLayout
  title="Customer Acquisition Cost Calculator - Shout.com"
  description="A completely free customer acquisition cost calculator to help you find the CAC for your business, based on your sales and marketing spend."
>
  <!-- Hero Section -->
  <section class="py-20">
    <Container>
      <div class="grid lg:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
            CAC <span class="text-primary">Calculator</span>
          </h1>
          <p class="text-lg mt-4 text-gray-600 max-w-xl">
            Calculate your customer acquisition cost instantly. Understand how much you're spending to acquire each new customer.
          </p>
        </div>
        <div class="hidden lg:flex justify-center items-center">
          <div class="w-24 h-24 text-primary">
            <Icon name="bx:money" class="w-full h-full" />
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Calculator Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Calculate your CAC</h2>
          <p class="text-lg mt-4 text-gray-600">
            Enter your sales and marketing costs and the number of customers acquired to calculate CAC.
          </p>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-8 max-w-2xl">
          <div class="space-y-6">
            <!-- Marketing Cost Input -->
            <div>
              <label for="marketingCost" class="block text-lg font-semibold mb-2">Total Marketing Cost ($)</label>
              <input
                type="number"
                id="marketingCost"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter total marketing spend"
                min="0"
                step="0.01"
              />
              <p class="text-sm text-gray-500 mt-2">Include all marketing campaigns and advertising spend</p>
            </div>

            <!-- Sales Cost Input -->
            <div>
              <label for="salesCost" class="block text-lg font-semibold mb-2">Total Sales Cost ($)</label>
              <input
                type="number"
                id="salesCost"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter total sales team cost"
                min="0"
                step="0.01"
              />
              <p class="text-sm text-gray-500 mt-2">Include sales team salaries and commissions</p>
            </div>

            <!-- Customers Acquired Input -->
            <div>
              <label for="customersAcquired" class="block text-lg font-semibold mb-2">New Customers Acquired</label>
              <input
                type="number"
                id="customersAcquired"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter number of new customers"
                min="1"
              />
              <p class="text-sm text-gray-500 mt-2">Number of customers acquired during this period</p>
            </div>

            <!-- Calculate Button -->
            <button
              id="calculateBtn"
              onclick="calculateCAC()"
              class="w-full bg-primary text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity mt-8"
            >
              Calculate CAC
            </button>
          </div>

          <!-- Results Section -->
          <div id="results" class="mt-12 hidden">
            <div class="bg-gradient-to-r from-primary/10 to-primary/5 rounded-lg p-8 border border-primary/20">
              <h3 class="text-lg font-semibold mb-4">Your Customer Acquisition Cost</h3>
              <div class="text-5xl font-bold text-primary mb-2">
                $<span id="cacResult">0</span>
              </div>
              <p class="text-gray-600 text-lg mb-6">per customer acquired</p>

              <div class="grid md:grid-cols-3 gap-6 mt-8">
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Total Investment</p>
                  <div class="text-2xl font-bold text-primary">
                    $<span id="totalInvestment">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Customers Acquired</p>
                  <div class="text-2xl font-bold text-primary">
                    <span id="customersDisplay">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Cost Efficiency</p>
                  <div class="text-2xl font-bold text-primary">
                    <span id="efficiency">Good</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </Container>
  </section>

  <!-- Formula Section -->
  <section class="pt-16 pb-16">
    <Container>
      <div class="mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">How CAC is calculated</h2>
        <p class="text-lg mt-4 text-gray-600">
          CAC measures the average cost to acquire each new customer.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-gray-50 rounded-lg p-8 border border-gray-200">
            <h3 class="text-2xl font-bold mb-6">CAC Formula</h3>
            <div class="bg-white rounded-lg p-6 border border-primary/20 mb-6">
              <p class="text-lg text-gray-700 text-center">
                <strong>CAC = (Marketing Cost + Sales Cost) / New Customers</strong>
              </p>
            </div>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold mb-2">Step 1: Sum All Costs</h4>
                <p class="text-gray-600">
                  Add marketing and sales costs together
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 2: Count New Customers</h4>
                <p class="text-gray-600">
                  Count the number of customers acquired during the period
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 3: Divide Costs by Customers</h4>
                <p class="text-gray-600">
                  Total Cost / New Customers = CAC
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:trending-down" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Lower CAC is Better</h3>
            </div>
            <p class="text-gray-600">
              A lower CAC means you're acquiring customers more efficiently. Compare CAC to Customer Lifetime Value (LTV) to ensure profitability.
            </p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:info-circle" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Ideal CAC:LTV Ratio</h3>
            </div>
            <p class="text-gray-600">
              Aim for a CAC:LTV ratio of 1:3 or better. This means your lifetime value should be at least 3x your acquisition cost.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Shout Features Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Increase customer acquisition with Shout</h2>
          <p class="text-lg mt-4 text-gray-600">
            Optimize your marketing efforts and improve CAC with our survey and feedback tools.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:target-lock" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Identify Target Audience</h3>
            </div>
            <p class="text-gray-600">Segment by demographics to find your ideal customers.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:send" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Multi-Channel Reach</h3>
            </div>
            <p class="text-gray-600">Distribute surveys via email, web, and social media.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:poll" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Find Brand Advocates</h3>
            </div>
            <p class="text-gray-600">Use NPS surveys to identify your most loyal customers.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:palette" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Custom Branding</h3>
            </div>
            <p class="text-gray-600">Add your branding to surveys and results pages.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:test-tube" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">A/B Test Content</h3>
            </div>
            <p class="text-gray-600">Split test messages to optimize conversion rates.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:bell" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Real-time Alerts</h3>
            </div>
            <p class="text-gray-600">Get notified of responses and act on feedback immediately.</p>
          </div>
        </div>
    </Container>
  </section>

  <!-- Final CTA -->
  <section class="py-16">
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-6">Ready to optimize your CAC?</h2>
        <p class="text-lg text-gray-600 mb-8">Start understanding your customer acquisition costs and improve your marketing ROI with Shout.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="https://identity.shout.com/Account/Login">Get Started</Button>
          <Button variant="outline" href="/custom-calculator-builder/">Build a CAC Calculator</Button>
        </div>
      </div>
    </Container>
  </section>
</AstroshipLayout>

<script is:inline>
function calculateCAC() {
  const marketingCost = parseFloat(document.getElementById('marketingCost').value) || 0;
  const salesCost = parseFloat(document.getElementById('salesCost').value) || 0;
  const customersAcquired = parseInt(document.getElementById('customersAcquired').value) || 0;

  if (customersAcquired === 0) {
    alert('Please enter the number of customers acquired');
    return;
  }

  const totalCost = marketingCost + salesCost;
  const cac = totalCost / customersAcquired;

  // Determine efficiency
  let efficiency = 'Good';
  if (cac > 500) {
    efficiency = 'High';
  } else if (cac > 200) {
    efficiency = 'Moderate';
  } else {
    efficiency = 'Excellent';
  }

  // Update results
  document.getElementById('cacResult').textContent = cac.toFixed(2);
  document.getElementById('totalInvestment').textContent = totalCost.toFixed(2);
  document.getElementById('customersDisplay').textContent = customersAcquired;
  document.getElementById('efficiency').textContent = efficiency;
  document.getElementById('results').classList.remove('hidden');

  // Scroll to results
  document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'start' });
}

// Allow Enter key to calculate
document.getElementById('customersAcquired').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    calculateCAC();
  }
});
</script>
