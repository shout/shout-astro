---
import AstroshipLayout from "../layouts/AstroshipLayout.astro";
import Container from "../components/container.astro";
import Button from "../components/ui/button.astro";
import { Icon } from "astro-icon/components";
---

<AstroshipLayout
  title="Lead Value Calculator | Free Calculator - Shout.com"
  description="Use Shout's lead value calculator to discover the average lead value for your campaign. Completely free, no contact details required."
>
  <!-- Hero Section -->
  <section class="py-20">
    <Container>
      <div class="grid lg:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
            Lead Value <span class="text-primary">Calculator</span>
          </h1>
          <p class="text-lg mt-4 text-gray-600 max-w-xl">
            Discover the average value of each lead generated by your campaigns.
          </p>
        </div>
        <div class="hidden lg:flex justify-center items-center">
          <div class="w-24 h-24 text-primary">
            <Icon name="bx:dollar" class="w-full h-full" />
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Calculator Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Calculate lead value</h2>
          <p class="text-lg mt-4 text-gray-600">
            Determine the average value of each lead in your pipeline.
          </p>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-8 max-w-2xl">
          <div class="space-y-6">
            <!-- Total Revenue Input -->
            <div>
              <label for="totalRevenue" class="block text-lg font-semibold mb-2">Total Revenue from Leads ($)</label>
              <input
                type="number"
                id="totalRevenue"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter total revenue generated"
                min="0"
                step="1000"
              />
              <p class="text-sm text-gray-500 mt-2">Total sales from leads in a specific period</p>
            </div>

            <!-- Total Leads Input -->
            <div>
              <label for="totalLeads" class="block text-lg font-semibold mb-2">Total Leads Generated</label>
              <input
                type="number"
                id="totalLeads"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter number of leads"
                min="1"
              />
              <p class="text-sm text-gray-500 mt-2">Number of leads captured in the same period</p>
            </div>

            <!-- Campaign Cost Input -->
            <div>
              <label for="campaignCost" class="block text-lg font-semibold mb-2">Campaign Cost ($)</label>
              <input
                type="number"
                id="campaignCost"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter campaign investment"
                min="0"
                step="100"
              />
              <p class="text-sm text-gray-500 mt-2">Total spent on lead generation campaign</p>
            </div>

            <!-- Calculate Button -->
            <button
              id="calculateBtn"
              onclick="calculateLeadValue()"
              class="w-full bg-primary text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity mt-8"
            >
              Calculate Lead Value
            </button>
          </div>

          <!-- Results Section -->
          <div id="results" class="mt-12 hidden">
            <div class="bg-gradient-to-r from-primary/10 to-primary/5 rounded-lg p-8 border border-primary/20">
              <h3 class="text-lg font-semibold mb-4">Your Lead Metrics</h3>

              <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div class="bg-white rounded-lg p-6 border border-primary/20">
                  <p class="text-sm text-gray-600 font-semibold mb-2">Average Lead Value</p>
                  <div class="text-4xl font-bold text-primary">
                    $<span id="leadValue">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-6 border border-primary/20">
                  <p class="text-sm text-gray-600 font-semibold mb-2">Cost Per Lead</p>
                  <div class="text-4xl font-bold text-primary">
                    $<span id="costPerLead">0</span>
                  </div>
                </div>
              </div>

              <div class="bg-white rounded-lg p-4 border border-gray-200 mt-6">
                <p class="text-gray-700"><strong>Lead Quality Ratio:</strong> <span id="leadQuality">0</span></p>
                <p class="text-sm text-gray-600 mt-2">Higher ratio indicates better value</p>
              </div>
            </div>
          </div>
        </div>
    </Container>
  </section>

  <!-- Formula Section -->
  <section class="pt-16 pb-16">
    <Container>
      <div class="mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">How lead value is calculated</h2>
        <p class="text-lg mt-4 text-gray-600">
          Understand the true value of your leads and campaign efficiency.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-gray-50 rounded-lg p-8 border border-gray-200">
            <h3 class="text-2xl font-bold mb-6">Lead Value Formulas</h3>
            <div class="bg-white rounded-lg p-6 border border-primary/20 mb-6">
              <div class="space-y-4 text-sm">
                <p><strong>Average Lead Value = Total Revenue / Total Leads</strong></p>
                <p><strong>Cost Per Lead = Campaign Cost / Total Leads</strong></p>
                <p><strong>Quality Ratio = Lead Value / Cost Per Lead</strong></p>
              </div>
            </div>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold mb-2">Step 1: Calculate Lead Value</h4>
                <p class="text-gray-600">
                  Divide total revenue by number of leads
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 2: Calculate Cost Per Lead</h4>
                <p class="text-gray-600">
                  Divide campaign cost by leads generated
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 3: Calculate Quality Ratio</h4>
                <p class="text-gray-600">
                  Divide value by cost (higher is better)
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:trending-up" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Quality Ratio Interpretation</h3>
            </div>
            <ul class="text-gray-600 space-y-2 text-sm">
              <li>Ratio > 3: Excellent lead quality</li>
              <li>Ratio 2-3: Good lead quality</li>
              <li>Ratio 1-2: Average lead quality</li>
              <li>Ratio < 1: Review campaign strategy</li>
            </ul>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:info-circle" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Optimize Your Value</h3>
            </div>
            <p class="text-gray-600 text-sm">
              Focus on improving lead quality and reducing acquisition costs. A higher quality ratio means your leads are worth more than you're spending to acquire them.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Shout Features Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Track lead value with Shout</h2>
          <p class="text-lg mt-4 text-gray-600">
            Understand the true ROI of your lead generation efforts.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:data" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Detailed Analytics</h3>
            </div>
            <p class="text-gray-600">Track lead sources, quality, and conversion metrics.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:user-pin" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Integrated CRM</h3>
            </div>
            <p class="text-gray-600">Track leads through the entire sales pipeline.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:filter" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Lead Segmentation</h3>
            </div>
            <p class="text-gray-600">Analyze value by lead source and segment.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:calculator" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">ROI Calculations</h3>
            </div>
            <p class="text-gray-600">Automatically calculate ROI for each campaign.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:chart" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Custom Reports</h3>
            </div>
            <p class="text-gray-600">Create custom reports on lead value metrics.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:plug-alt" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Multi-Channel Tracking</h3>
            </div>
            <p class="text-gray-600">Track leads across all your marketing channels.</p>
          </div>
        </div>
    </Container>
  </section>

  <!-- Final CTA -->
  <section class="py-16">
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-6">Ready to optimize your lead value?</h2>
        <p class="text-lg text-gray-600 mb-8">Start tracking and improving your lead generation ROI with Shout.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/signup/">Get Started</Button>
          <Button variant="outline" href="/crm/">Learn More</Button>
        </div>
      </div>
    </Container>
  </section>
</AstroshipLayout>

<script is:inline>
function calculateLeadValue() {
  const totalRevenue = parseFloat(document.getElementById('totalRevenue').value) || 0;
  const totalLeads = parseInt(document.getElementById('totalLeads').value) || 0;
  const campaignCost = parseFloat(document.getElementById('campaignCost').value) || 0;

  if (totalLeads === 0) {
    alert('Please enter the number of leads');
    return;
  }

  if (totalRevenue === 0) {
    alert('Please enter the total revenue');
    return;
  }

  // Calculate metrics
  const leadValue = totalRevenue / totalLeads;
  const costPerLead = campaignCost / totalLeads;
  const qualityRatio = costPerLead > 0 ? leadValue / costPerLead : 0;

  // Update results
  document.getElementById('leadValue').textContent = leadValue.toFixed(2);
  document.getElementById('costPerLead').textContent = costPerLead.toFixed(2);
  document.getElementById('leadQuality').textContent = qualityRatio.toFixed(2);
  document.getElementById('results').classList.remove('hidden');

  // Scroll to results
  document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'start' });
}

// Allow Enter key to calculate
document.getElementById('campaignCost').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    calculateLeadValue();
  }
});
</script>
