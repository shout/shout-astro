---
import AstroshipLayout from "../layouts/AstroshipLayout.astro";
import Container from "../components/container.astro";
import Button from "../components/ui/button.astro";
import { Icon } from "astro-icon/components";
---

<AstroshipLayout
  title="Survey Response Rate Calculator - Shout.com"
  description="Use our survey response rate calculator to determine how many of your participants responded in relation to those invited."
>
  <!-- Hero Section -->
  <section class="py-20">
    <Container>
      <div class="grid lg:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
            Response Rate <span class="text-primary">Calculator</span>
          </h1>
          <p class="text-lg mt-4 text-gray-600 max-w-xl">
            Calculate your survey response rate instantly. Measure what percentage of invited participants completed your survey.
          </p>
        </div>
        <div class="hidden lg:flex justify-center items-center">
          <div class="w-24 h-24 text-primary">
            <Icon name="bx:chart" class="w-full h-full" />
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Calculator Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Calculate response rate</h2>
          <p class="text-lg mt-4 text-gray-600">
            Enter the number of participants invited and the number who responded.
          </p>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-8 max-w-2xl">
          <div class="space-y-6">
            <!-- Invited Input -->
            <div>
              <label for="invited" class="block text-lg font-semibold mb-2">Total Invited</label>
              <input
                type="number"
                id="invited"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter number of people invited"
                min="1"
              />
              <p class="text-sm text-gray-500 mt-2">Total number of people sent the survey</p>
            </div>

            <!-- Responded Input -->
            <div>
              <label for="responded" class="block text-lg font-semibold mb-2">Total Responded</label>
              <input
                type="number"
                id="responded"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter number of people who responded"
                min="0"
              />
              <p class="text-sm text-gray-500 mt-2">Number of people who completed the survey</p>
            </div>

            <!-- Calculate Button -->
            <button
              id="calculateBtn"
              onclick="calculateResponseRate()"
              class="w-full bg-primary text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity mt-8"
            >
              Calculate Response Rate
            </button>
          </div>

          <!-- Results Section -->
          <div id="results" class="mt-12 hidden">
            <div class="bg-gradient-to-r from-primary/10 to-primary/5 rounded-lg p-8 border border-primary/20">
              <h3 class="text-lg font-semibold mb-4">Your Response Rate</h3>
              <div class="text-5xl font-bold text-primary mb-2">
                <span id="responseRateResult">0</span>%
              </div>
              <p id="responseRateInterpretation" class="text-gray-600 text-lg mb-6"></p>

              <div class="grid md:grid-cols-3 gap-6 mt-8">
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Invited</p>
                  <div class="text-2xl font-bold text-gray-700">
                    <span id="invitedDisplay">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Responded</p>
                  <div class="text-2xl font-bold text-primary">
                    <span id="respondedDisplay">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Non-Responders</p>
                  <div class="text-2xl font-bold text-gray-700">
                    <span id="nonResponders">0</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </Container>
  </section>

  <!-- Formula Section -->
  <section class="pt-16 pb-16">
    <Container>
      <div class="mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">How response rate is calculated</h2>
        <p class="text-lg mt-4 text-gray-600">
          Response rate measures what percentage of invited participants completed your survey.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-gray-50 rounded-lg p-8 border border-gray-200">
            <h3 class="text-2xl font-bold mb-6">Response Rate Formula</h3>
            <div class="bg-white rounded-lg p-6 border border-primary/20 mb-6">
              <p class="text-lg text-gray-700 text-center">
                <strong>Response Rate = (Responses / Invited) Ã— 100</strong>
              </p>
            </div>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold mb-2">Step 1: Count Total Responses</h4>
                <p class="text-gray-600">
                  Count the number of completed surveys
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 2: Divide by Invited</h4>
                <p class="text-gray-600">
                  Divide responses by total invitations sent
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 3: Multiply by 100</h4>
                <p class="text-gray-600">
                  Convert to percentage
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:trending-up" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Good Response Rates</h3>
            </div>
            <ul class="text-gray-600 space-y-2">
              <li>Email surveys: 20-30%</li>
              <li>Online surveys: 10-15%</li>
              <li>In-person: 50-80%</li>
              <li>Incentivized: 30-50%</li>
            </ul>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:info-circle" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Improve Response Rates</h3>
            </div>
            <p class="text-gray-600">
              Offer incentives, keep surveys short, personalize invitations, and send multiple follow-ups to boost participation.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Shout Features Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Improve response rates with Shout</h2>
          <p class="text-lg mt-4 text-gray-600">
            Use our survey platform to distribute surveys and track response rates automatically.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:send" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Multi-Channel Reach</h3>
            </div>
            <p class="text-gray-600">Send surveys via email, web, SMS, and social media.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:bell" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Automated Reminders</h3>
            </div>
            <p class="text-gray-600">Send follow-up reminders to boost completion rates.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:gift" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Incentive Management</h3>
            </div>
            <p class="text-gray-600">Offer rewards to encourage survey participation.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:data" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Real-time Analytics</h3>
            </div>
            <p class="text-gray-600">Track response rates and completion metrics in real-time.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:palette" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Custom Branding</h3>
            </div>
            <p class="text-gray-600">Add your branding to improve trust and response rates.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:mobile" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Mobile Optimized</h3>
            </div>
            <p class="text-gray-600">Surveys are fully responsive across all devices.</p>
          </div>
        </div>
    </Container>
  </section>

  <!-- Final CTA -->
  <section class="py-16">
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-6">Ready to boost your response rates?</h2>
        <p class="text-lg text-gray-600 mb-8">Start collecting survey responses and gathering valuable feedback from your audience with Shout.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/signup/">Create Survey</Button>
          <Button variant="outline" href="/survey-maker/">Learn More</Button>
        </div>
      </div>
    </Container>
  </section>
</AstroshipLayout>

<script is:inline>
function calculateResponseRate() {
  const invited = parseInt(document.getElementById('invited').value) || 0;
  const responded = parseInt(document.getElementById('responded').value) || 0;

  if (invited === 0) {
    alert('Please enter the number of people invited');
    return;
  }

  if (responded > invited) {
    alert('Responses cannot exceed invitations sent');
    return;
  }

  const responseRate = Math.round((responded / invited) * 100);
  const nonResponders = invited - responded;

  // Determine interpretation
  let interpretation = '';
  if (responseRate >= 50) {
    interpretation = 'Excellent - Very strong response rate';
  } else if (responseRate >= 30) {
    interpretation = 'Good - Above average response rate';
  } else if (responseRate >= 20) {
    interpretation = 'Average - Typical response rate';
  } else if (responseRate >= 10) {
    interpretation = 'Below Average - Consider sending reminders';
  } else {
    interpretation = 'Low - Try incentives or reminders to boost participation';
  }

  // Update results
  document.getElementById('responseRateResult').textContent = responseRate;
  document.getElementById('responseRateInterpretation').textContent = interpretation;
  document.getElementById('invitedDisplay').textContent = invited;
  document.getElementById('respondedDisplay').textContent = responded;
  document.getElementById('nonResponders').textContent = nonResponders;
  document.getElementById('results').classList.remove('hidden');

  // Scroll to results
  document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'start' });
}

// Allow Enter key to calculate
document.getElementById('responded').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    calculateResponseRate();
  }
});
</script>
