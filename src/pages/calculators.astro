---
import AstroshipLayout from "../layouts/AstroshipLayout.astro";
import Container from "../components/container.astro";
import Button from "../components/ui/button.astro";
import { Icon } from "astro-icon/components";

const calculators = [
  {
    title: "NPS Calculator",
    description: "Calculate your Net Promoter Score to measure customer loyalty and satisfaction.",
    path: "/nps-calculator/",
    icon: "bx:happy-heart-eyes"
  },
  {
    title: "CSAT Calculator",
    description: "Measure your Customer Satisfaction Score based on survey responses.",
    path: "/csat-calculator/",
    icon: "bx:smile"
  },
  {
    title: "Customer Acquisition Cost Calculator",
    description: "Calculate how much it costs to acquire each new customer.",
    path: "/customer-acquisition-cost-calculator/",
    icon: "bx:user-plus"
  },
  {
    title: "Discount Calculator",
    description: "Calculate discounts, sale prices, and percentage savings.",
    path: "/discount-calculator/",
    icon: "bx:purchase-tag"
  },
  {
    title: "Survey Response Rate Calculator",
    description: "Determine your survey response rate and benchmark against industry standards.",
    path: "/survey-response-rate-calculator/",
    icon: "bx:bar-chart-alt-2"
  },
  {
    title: "Lead Generation Calculator",
    description: "Calculate how many leads you need to hit your revenue goals.",
    path: "/lead-generation-calculator/",
    icon: "bx:bullseye"
  },
  {
    title: "Lead Value Calculator",
    description: "Determine the monetary value of each lead in your pipeline.",
    path: "/lead-value-calculator/",
    icon: "bx:dollar-circle"
  },
  {
    title: "SaaS Valuation Calculator",
    description: "Estimate your SaaS company's valuation based on key metrics.",
    path: "/saas-valuation-calculator/",
    icon: "bx:trending-up"
  }
];
---

<AstroshipLayout
  title="Free Online Calculators - Shout.com"
  description="Use our free online calculators for NPS, CSAT, customer acquisition cost, lead generation, and more. Built with Shout's custom calculator builder."
>
  <!-- Hero Section -->
  <section class="py-20">
    <Container>
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl lg:text-6xl font-bold lg:tracking-tight mb-6">
          Free Online <span class="text-primary">Calculators</span>
        </h1>
        <p class="text-lg text-gray-600">
          Use our collection of free calculators to measure customer satisfaction, calculate marketing metrics, and make data-driven decisions.
        </p>
      </div>
    </Container>
  </section>

  <!-- Calculators Grid -->
  <section class="pb-16">
    <Container>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {calculators.map((calc) => (
          <a href={calc.path} class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow group">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
                <Icon name={calc.icon} class="w-6 h-6 text-primary" />
              </div>
            </div>
            <h2 class="text-lg font-semibold text-gray-900 group-hover:text-primary transition-colors mb-2">
              {calc.title}
            </h2>
            <p class="text-gray-600 text-sm">
              {calc.description}
            </p>
          </a>
        ))}
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-50">
    <Container>
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-6">
          Build your own calculator
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Create custom calculators for your website with Shout's no-code calculator builder. Boost engagement, capture leads, and provide value to your visitors.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="https://identity.shout.com/Account/Register">Start Your Free Trial</Button>
          <Button variant="outline" href="/custom-calculator-builder/">Learn More</Button>
        </div>
      </div>
    </Container>
  </section>
</AstroshipLayout>
