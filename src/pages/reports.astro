---
import AstroshipLayout from "../layouts/AstroshipLayout.astro";
import Container from "../components/container.astro";
import Button from "../components/ui/button.astro";
import { Icon } from "astro-icon/components";
import CustomerLogos from "../components/customer-logos.astro";
import Features from "../components/features.astro";
---

<AstroshipLayout
  title="Survey Insights Reports - Shout.com"
  description="With Shout's survey insights reports get an overview of your responses, filter and compare data sets, and share results with stakeholders."
>
  <Container>
    <!-- Main Content Section -->
    <section class="pt-16 pb-16">
      <div class="mb-12">
        <h1 class="text-5xl lg:text-6xl font-bold lg:tracking-tight">Survey Insights <span class="text-primary">Reports</span></h1>
        <p class="text-lg mt-4 text-gray-600 max-w-3xl">
          Get an overview of your responses, filter and compare data sets, and share results with stakeholders using our comprehensive reporting tools.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 mt-6">
          <Button href="/signup/">Start your Free Trial</Button>
          <Button variant="outline" href="/demo/">Book a Demo</Button>
        </div>
      </div>
    </section>

    <!-- Reports Features Section -->
    <section class="pt-16 pb-16 bg-gray-50">
      <div class="mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Everything you need for data analysis</h2>
        <p class="text-lg mt-4 text-gray-600">
          Transform your survey data into actionable insights with powerful reporting and analytics tools.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:chart" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Real-time Reports</h3>
          </div>
          <p class="text-gray-600">View live results as responses come in with real-time reporting.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:pie-chart" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Visual Charts</h3>
          </div>
          <p class="text-gray-600">Display data with pie charts, bar charts, and other visualizations.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:filter" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Data Filtering</h3>
          </div>
          <p class="text-gray-600">Filter responses by demographics, date ranges, and custom criteria.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:git-compare" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Cross-tabulation</h3>
          </div>
          <p class="text-gray-600">Compare responses across different segments and variables.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:export" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Export Options</h3>
          </div>
          <p class="text-gray-600">Export data to CSV, Excel, PDF, and PowerPoint formats.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:share" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Report Sharing</h3>
          </div>
          <p class="text-gray-600">Share reports with stakeholders via secure links.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:bookmark" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Custom Views</h3>
          </div>
          <p class="text-gray-600">Save custom report views for repeated analysis.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:trending-up" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Trend Analysis</h3>
          </div>
          <p class="text-gray-600">Track trends and changes over time with comparative reporting.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:calculator" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Statistical Analysis</h3>
          </div>
          <p class="text-gray-600">Perform statistical analysis with confidence intervals and significance testing.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:text" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Text Analytics</h3>
          </div>
          <p class="text-gray-600">Analyze open-text responses with automated text analytics.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:palette" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Custom Branding</h3>
          </div>
          <p class="text-gray-600">Brand your reports with custom logos and color schemes.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:mobile" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Mobile Access</h3>
          </div>
          <p class="text-gray-600">Access reports on any device with mobile-responsive design.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:calendar" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Scheduled Reports</h3>
          </div>
          <p class="text-gray-600">Schedule automatic report generation and delivery.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:dashboard" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Dashboards</h3>
          </div>
          <p class="text-gray-600">Create interactive dashboards with multiple report views.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:data" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">API Access</h3>
          </div>
          <p class="text-gray-600">Access report data programmatically via REST API.</p>
        </div>
        <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <Icon name="bx:archive" class="w-8 h-8 text-primary mr-3" />
            <h3 class="text-lg font-semibold text-primary">Data Archive</h3>
          </div>
          <p class="text-gray-600">Archive and store historical report data securely.</p>
        </div>
      </div>
    </section>

    <!-- Customer Logos -->
    <CustomerLogos />

    <!-- Data Analysis Section -->
    <section class="pt-16 pb-16">
      <div class="mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Transform data into insights</h2>
        <p class="text-lg mt-4 text-gray-600">
          Powerful analytics tools help you understand your data and make informed decisions.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="space-y-8">
            <div>
              <h3 class="text-2xl font-bold mb-4">Filter and segment responses</h3>
              <p class="text-gray-600 text-lg">
                Apply filters to analyze specific segments of your data and identify trends and patterns.
              </p>
            </div>

            <div>
              <h3 class="text-2xl font-bold mb-4">Compare across variables</h3>
              <p class="text-gray-600 text-lg">
                Use cross-tabulation to compare responses across different demographics and criteria.
              </p>
            </div>

            <div>
              <h3 class="text-2xl font-bold mb-4">Share insights with stakeholders</h3>
              <p class="text-gray-600 text-lg">
                Export professional reports or share interactive dashboards with team members and clients.
              </p>
            </div>
          </div>
        </div>

        <div class="lg:pl-8">
          <img
            src="/images/2022/11/Compare-And-Filter-Survey-Reports.png"
            alt="Compare And Filter Survey Reports"
            class="w-full h-auto rounded-lg shadow-lg"
            loading="lazy"
          />
        </div>
      </div>
    </section>

    <!-- Integrated Solutions -->
    <Features />

    <!-- Final CTA -->
    <section class="py-16">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-6">Ready to analyze your data?</h2>
        <p class="text-lg text-gray-600 mb-8">Start creating powerful reports and gaining insights from your survey data.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/signup/">Start your Free Trial</Button>
          <Button variant="outline" href="/demo/">Book a Demo</Button>
        </div>
      </div>
    </section>

  </Container>
</AstroshipLayout>