---
import AstroshipLayout from "../layouts/AstroshipLayout.astro";
import Container from "../components/container.astro";
import Button from "../components/ui/button.astro";
import { Icon } from "astro-icon/components";
---

<AstroshipLayout
  title="Discount Calculator | Find the Discount Percentage - Shout.com"
  description="Use our free discount calculator to find the exact percentage a price for a product or service has been discounted by."
>
  <!-- Hero Section -->
  <section class="py-20">
    <Container>
      <div class="grid lg:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
            Discount <span class="text-primary">Calculator</span>
          </h1>
          <p class="text-lg mt-4 text-gray-600 max-w-xl">
            Calculate the discount percentage for any product or service based on original and final price.
          </p>
        </div>
        <div class="hidden lg:flex justify-center items-center">
          <div class="w-24 h-24 text-primary">
            <Icon name="bx:purchase-tag" class="w-full h-full" />
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Calculator Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Calculate discount percentage</h2>
          <p class="text-lg mt-4 text-gray-600">
            Enter the original and final price to find the discount percentage.
          </p>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-8 max-w-2xl">
          <div class="space-y-6">
            <!-- Original Price Input -->
            <div>
              <label for="originalPrice" class="block text-lg font-semibold mb-2">Original Price ($)</label>
              <input
                type="number"
                id="originalPrice"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter original price"
                min="0"
                step="0.01"
              />
              <p class="text-sm text-gray-500 mt-2">Price before discount was applied</p>
            </div>

            <!-- Final Price Input -->
            <div>
              <label for="finalPrice" class="block text-lg font-semibold mb-2">Final Price ($)</label>
              <input
                type="number"
                id="finalPrice"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
                placeholder="Enter final/sale price"
                min="0"
                step="0.01"
              />
              <p class="text-sm text-gray-500 mt-2">Price after discount was applied</p>
            </div>

            <!-- Calculate Button -->
            <button
              id="calculateBtn"
              onclick="calculateDiscount()"
              class="w-full bg-primary text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity mt-8"
            >
              Calculate Discount
            </button>
          </div>

          <!-- Results Section -->
          <div id="results" class="mt-12 hidden">
            <div class="bg-gradient-to-r from-primary/10 to-primary/5 rounded-lg p-8 border border-primary/20">
              <h3 class="text-lg font-semibold mb-4">Your Discount</h3>
              <div class="text-5xl font-bold text-primary mb-2">
                <span id="discountPercent">0</span>%
              </div>
              <p class="text-gray-600 text-lg mb-6">discount applied</p>

              <div class="grid md:grid-cols-3 gap-6 mt-8">
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Original Price</p>
                  <div class="text-2xl font-bold text-gray-700">
                    $<span id="originalDisplay">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Discount Amount</p>
                  <div class="text-2xl font-bold text-primary">
                    $<span id="discountAmount">0</span>
                  </div>
                </div>
                <div class="bg-white rounded-lg p-4 border border-gray-200">
                  <p class="text-gray-600 font-semibold mb-2">Final Price</p>
                  <div class="text-2xl font-bold text-primary">
                    $<span id="finalDisplay">0</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </Container>
  </section>

  <!-- Formula Section -->
  <section class="pt-16 pb-16">
    <Container>
      <div class="mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">How discount is calculated</h2>
        <p class="text-lg mt-4 text-gray-600">
          The discount percentage shows what percentage off the original price was offered.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-gray-50 rounded-lg p-8 border border-gray-200">
            <h3 class="text-2xl font-bold mb-6">Discount Formula</h3>
            <div class="bg-white rounded-lg p-6 border border-primary/20 mb-6">
              <p class="text-lg text-gray-700 text-center">
                <strong>Discount % = ((Original - Final) / Original) × 100</strong>
              </p>
            </div>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold mb-2">Step 1: Find the Difference</h4>
                <p class="text-gray-600">
                  Subtract final price from original price
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 2: Divide by Original</h4>
                <p class="text-gray-600">
                  Divide the difference by the original price
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Step 3: Multiply by 100</h4>
                <p class="text-gray-600">
                  Multiply by 100 to get the percentage
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:math" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Example Calculation</h3>
            </div>
            <p class="text-gray-600 mb-4">
              If an item costs $50 originally and is on sale for $40:
            </p>
            <ul class="text-gray-600 space-y-2 text-sm">
              <li>Difference: $50 - $40 = $10</li>
              <li>Divide by original: $10 / $50 = 0.2</li>
              <li>Multiply by 100: 0.2 × 100 = 20%</li>
            </ul>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <Icon name="bx:info-circle" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold">Common Discounts</h3>
            </div>
            <ul class="text-gray-600 space-y-2 text-sm">
              <li>10% off: Pay 90% of original</li>
              <li>25% off: Pay 75% of original</li>
              <li>50% off: Pay 50% of original</li>
              <li>BOGO: 50% off when buying 2</li>
            </ul>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Shout Features Section -->
  <section class="pt-16 pb-16 bg-gray-50">
    <Container>
        <div class="mb-12">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Create custom calculators with Shout</h2>
          <p class="text-lg mt-4 text-gray-600">
            Build interactive calculators like this one without writing any code.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:code-alt" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">No Code Needed</h3>
            </div>
            <p class="text-gray-600">Create calculators without writing any code.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:question-mark" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">20+ Question Types</h3>
            </div>
            <p class="text-gray-600">Numeric fields, sliders, dropdowns, and more.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:code-block" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Easy Embedding</h3>
            </div>
            <p class="text-gray-600">Embed on your website with simple code snippet.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:table" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Import Datasets</h3>
            </div>
            <p class="text-gray-600">Import Excel spreadsheets for complex calculations.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:user" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Lead Capture</h3>
            </div>
            <p class="text-gray-600">Gate results behind email capture forms.</p>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <Icon name="bx:mobile" class="w-8 h-8 text-primary mr-3" />
              <h3 class="text-lg font-semibold text-primary">Mobile Responsive</h3>
            </div>
            <p class="text-gray-600">Works perfectly on all devices and screen sizes.</p>
          </div>
        </div>
    </Container>
  </section>

  <!-- Final CTA -->
  <section class="py-16">
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mb-6">Ready to create your calculator?</h2>
        <p class="text-lg text-gray-600 mb-8">Build interactive calculators and embed them on your website to boost engagement and generate leads.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="https://identity.shout.com/Account/Login">Create a Calculator</Button>
          <Button variant="outline" href="/custom-calculator-builder/">Learn More</Button>
        </div>
      </div>
    </Container>
  </section>
</AstroshipLayout>

<script is:inline>
function calculateDiscount() {
  const originalPrice = parseFloat(document.getElementById('originalPrice').value) || 0;
  const finalPrice = parseFloat(document.getElementById('finalPrice').value) || 0;

  if (originalPrice === 0) {
    alert('Please enter the original price');
    return;
  }

  if (finalPrice > originalPrice) {
    alert('Final price cannot be higher than original price');
    return;
  }

  const discountAmount = originalPrice - finalPrice;
  const discountPercent = Math.round((discountAmount / originalPrice) * 100);

  // Update results
  document.getElementById('discountPercent').textContent = discountPercent;
  document.getElementById('originalDisplay').textContent = originalPrice.toFixed(2);
  document.getElementById('discountAmount').textContent = discountAmount.toFixed(2);
  document.getElementById('finalDisplay').textContent = finalPrice.toFixed(2);
  document.getElementById('results').classList.remove('hidden');

  // Scroll to results
  document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'start' });
}

// Allow Enter key to calculate
document.getElementById('finalPrice').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    calculateDiscount();
  }
});
</script>
