---
import Container from "../container.astro";
import Link from "../ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Product",
    path: "#",
    children: [
      { title: "Survey Maker", path: "/survey-maker/" },
      { title: "Quiz Builder", path: "/quiz-builder/" },
      { title: "Form Builder", path: "/form-builder/" },
    ],
  },
  {
    title: "Pricing",
    path: "/pricing/",
  },
  {
    title: "Solutions",
    path: "#",
    children: [
      { title: "Lead Generation", path: "/lead-generation/" },
      { title: "Customer Feedback", path: "/customer-feedback/" },
      { title: "Market Research", path: "/market-research/" },
    ],
  },
  {
    title: "Resources",
    path: "#",
    children: [
      { title: "Blog", path: "/blog/" },
      { title: "Help Center", path: "/help/" },
      { title: "API Documentation", path: "/docs/" },
    ],
  },
  {
    title: "About",
    path: "/about/",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center">
          <img src="/images/logo.svg" alt="Shout.com" class="h-12 w-auto">
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="/login/" style="muted" block size="md">Log in</Link>
          <Link href="/signup/" size="md" block>Start Free Trial</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="/login/" class="text-gray-600 hover:text-gray-900">Log in</a>
        <Link href="/signup/" size="md">Start Free Trial</Link>
      </div>
    </div>
  </header>
</Container>
